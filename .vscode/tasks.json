{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\MinGW32\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-std=c++11", // Add this line to enable C++11
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-lopengl32",
				"-lglu32",
				"-lm",
				"-lglut32"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
